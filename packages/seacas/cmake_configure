#!/bin/bash
cmake_args+=("-DCMAKE_BUILD_TYPE:STRING=Release")
cmake_args+=("-DSEACASProj_ENABLE_Fortran:BOOL=OFF")
cmake_args+=("-DSEACASProj_ENABLE_Kokkos:BOOL=OFF")
cmake_args+=("-DSEACASProj_ENABLE_Zoltan:BOOL=OFF")
cmake_args+=("-DSEACASProj_ENABLE_SEACASExodus:BOOL=ON")
cmake_args+=("-DSEACASProj_ENABLE_SEACASAprepro:BOOL=ON")
cmake_args+=("-DNetcdf_LIBRARY_DIRS:PATH=$netcdf_install/lib")
cmake_args+=("-DNetcdf_INCLUDE_DIRS:PATH=$netcdf_install/include")
cmake_args+=("-DBUILD_SHARED_LIBS:BOOL=ON")
cmake_args+=("-DSEACASExodus_ENABLE_STATIC:BOOL=OFF")
cmake_args+=("-DTPL_ENABLE_HDF5:BOOL=ON")
cmake_args+=("-DSEACASExodus_ENABLE_HDF5:BOOL=ON")
cmake_args+=("-DHDF5_LIBRARY_NAMES:STRING=hdf5-shared\;hdf5_hl-shared")
cmake_args+=("-DHDF5_LIBRARY_DIRS:PATH=$hdf5_install/lib")
cmake_args+=("-DHDF5_INCLUDE_DIRS:PATH=$hdf5_install/include")
export MPI=OFF
