#!/bin/bash
cmake_args+=("-DCMAKE_CXX_FLAGS=\"-O3\"")
cmake_args+=("-DCMAKE_C_FLAGS=\"-O3\"")
cmake_args+=("-DHDF5_BUILD_FORTRAN:BOOL=OFF")
cmake_args+=("-DHDF5_BUILD_CPP_LIB:BOOL=OFF")
cmake_args+=("-DHDF5_ENABLE_PARALLEL:BOOL=OFF")
cmake_args+=("-DBUILD_SHARED_LIBS:BOOL=ON")
cmake_args+=("-DBUILD_TESTING:BOOL=OFF")
cmake_args+=("-Wno-dev")
